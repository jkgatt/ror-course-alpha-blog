<ul class="listing">
	<div class="row">
		<div class="well col-md-4 col-md-offset-4">
			<li><%= link_to gravatar_for(obj), user_path(obj)%>
			<li class="article-title">
				<%= link_to obj.username, user_path(obj) %>
			</li>
			<li>
				<small>
					<%= pluralize(obj.articles.count, "Article") if obj.articles %>	
				</small>
			</li>
			<% if logged_in? and current_user.admin? %>
			<li>
				<%= link_to "Delete this user", user_path(obj), method: :delete, data: {confirm: "Are you sure you want delete the user and all their articles?" } %>
			</li>
			<% end %>
		</div>
	</div>
</ul>