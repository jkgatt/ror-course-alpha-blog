<h1 class="text_center">Welcome to <%= @user.username %>'s page</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4 center">
		<%= gravatar_for(@user, size: 150)%>
	</div>
</div>

<h4 class="text_center"><%= @user.username %>'s articles</h4>

<%= render 'articles/article', articles: @user_articles %>

<div class="text_center">
	<%= will_paginate @user_articles %>
</div>